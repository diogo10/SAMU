<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_principal_cadastro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- inicio do shape nome -->

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="Nome:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#000000" />
        </LinearLayout>
        <!-- fim do shape nome -->


        <!-- inicio do shape sexo -->

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="Qual seu sexo ?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_mascu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/cb_femi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feminino"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
        <!-- fim do shape sexo -->


        <!-- inicio do shape idade -->

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/labelIdade"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="left"
                    android:padding="5dip"
                    android:text="Idade:"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/tv_idade"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="left"
                    android:padding="5dip"
                    android:text="24 anos"
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonmenosidade"
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:layout_alignParentLeft="true"
                    android:text="-" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/buttonmenosidade"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/buttonmaisidade"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_alignParentRight="true"
                        android:text="+" />

                    <SeekBar
                        android:id="@+id/seekBarIdade"
                        android:layout_width="fill_parent"
                        android:layout_height="35dip"
                        android:layout_toLeftOf="@+id/buttonmaisidade"
                        android:paddingLeft="7dip"
                        android:paddingRight="7dip" >
                    </SeekBar>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <!-- fim do shape idade -->


       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_proximo"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_blue"
                android:text="PrÃ³ximo" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>